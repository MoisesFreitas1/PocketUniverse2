<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|center_vertical"
    android:background="@android:color/white"
    android:columnCount="4"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true" >

    <ImageView
        android:id="@+id/forcImageView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="right|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:src="@drawable/forc" />

    <EditText
        android:id="@+id/forcEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_weight="1"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="10" />

    <TextView
        android:id="@+id/forcTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:background="@android:color/holo_blue_bright"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/deslocImageView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:src="@drawable/desloc" />

    <EditText
        android:id="@+id/deslocEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="10" />

    <TextView
        android:id="@+id/deslocTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:background="@android:color/holo_blue_bright"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/tetaImageView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:src="@drawable/teta" />

    <EditText
        android:id="@+id/tetaEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberSigned"
        android:maxLength="10" />

    <TextView
        android:id="@+id/tetaTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="left|center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="1"
        android:background="@android:color/holo_blue_bright"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/tfcImageView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="right|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:src="@drawable/var_tfc" />

    <TextView
        android:id="@+id/tfcTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_gravity="left|center_horizontal"
        android:layout_margin="10dp"
        android:layout_row="3"
        android:background="@android:color/holo_orange_light"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>